{
  "name": "@ansvar/ot-security-mcp",
  "version": "0.4.0",
  "description": "MCP server for OT (Operational Technology) security standards and frameworks",
  "mcpName": "io.github.Ansvar-Systems/ot-security-mcp",
  "type": "module",
  "author": "Ansvar Systems <hello@ansvar.eu>",
  "license": "Apache-2.0",
  "engines": {
    "node": ">=18"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "ot-security-mcp": "dist/index.js"
  },
  "files": [
    "dist",
    "data/ot-security.db",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "clean": "rm -rf dist",
    "build": "tsc && cp src/database/schema.sql dist/database/",
    "dev": "tsx src/index.ts",
    "start": "node dist/index.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src scripts --ext .ts",
    "lint:fix": "eslint src scripts --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\" \"scripts/**/*.ts\" \"tests/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\" \"scripts/**/*.ts\" \"tests/**/*.ts\"",
    "type-check": "tsc --noEmit",
    "prepare": "husky",
    "precommit": "lint-staged",
    "ingest:mitre": "tsx scripts/ingest-mitre-ics.ts",
    "ingest:nist-80053": "tsx scripts/ingest-nist-80053.ts",
    "ingest:nist-80082": "tsx scripts/ingest-nist-80082.ts",
    "ingest:iec62443": "tsx scripts/ingest-iec62443.ts",
    "ingest:mappings": "tsx scripts/ingest-cross-mappings.ts",
    "validate:iec62443": "tsx scripts/validate-iec62443.ts",
    "verify:integrity": "tsx scripts/verify-data-integrity.ts",
    "verify:setup": "tsx scripts/verify-setup.ts",
    "verify:production": "tsx verify-production-ready.ts",
    "check-updates": "tsx scripts/check-updates.ts",
    "security:audit": "npm audit --audit-level=moderate",
    "security:check": "npm run security:audit && npm run lint"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.25.3",
    "ajv": "^8.17.1",
    "ajv-formats": "^3.0.1",
    "better-sqlite3": "^12.6.2"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.3.1",
    "@commitlint/config-conventional": "^20.3.1",
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^25.0.10",
    "@typescript-eslint/eslint-plugin": "^8.54.0",
    "@typescript-eslint/parser": "^8.54.0",
    "eslint": "^9.39.2",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.8.1",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "ot-security",
    "operational-technology",
    "ics",
    "industrial-control-systems",
    "scada",
    "plc",
    "dcs",
    "iec-62443",
    "nist-800-53",
    "nist-800-82",
    "mitre-attack",
    "mitre-ics",
    "security-standards",
    "compliance",
    "cybersecurity",
    "critical-infrastructure",
    "threat-intelligence",
    "purdue-model",
    "network-segmentation",
    "claude",
    "claude-desktop"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Ansvar-Systems/ot-security-mcp.git"
  },
  "homepage": "https://github.com/Ansvar-Systems/ot-security-mcp#readme",
  "bugs": {
    "url": "https://github.com/Ansvar-Systems/ot-security-mcp/issues"
  }
}
